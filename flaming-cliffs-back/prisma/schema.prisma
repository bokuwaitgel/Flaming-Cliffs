// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  role      Role     @default(USER)
  accessToken String?  @unique
  refreshToken String?  @unique
  createdAt DateTime @default(dbgenerated("now() + interval '12 hour'"))
  updatedAt DateTime @default(dbgenerated("now() + interval '12 hour'"))
}

enum Role {
  ADMIN
  USER
}

model Registration {
  id                String   @id @default(cuid())
  tourOperator      String
  registrationDate  DateTime @default(now())
  touristCount      Int
  countries         String[]
  tourists          Json[]   // Structure: [{country: string, count: number}]
  guideCount        Int?     @default(0)
  driverCount       Int?     @default(0)
  totalAmount       Float
  currency          String?  @default("MNT")
  notes             String?
  contactInfo       Json?
  status            String?  @default("active")
  vehicleNumber     String?
  vehicleType       String?
  guideName         String?
  createdAt         DateTime @default(dbgenerated("now() + interval '12 hour'"))
  updatedAt         DateTime @default(dbgenerated("now() + interval '12 hour'"))

  @@map("registrations")
}

model VisitorStats {
  id                   String   @id @default(cuid())
  date                 DateTime @unique
  domesticVisitors     Int?     @default(0)
  internationalVisitors Int?    @default(0)
  totalVisitors        Int?     @default(0)
  domesticRevenue      Float?   @default(0)
  internationalRevenue Float?   @default(0)
  totalRevenue         Float?   @default(0)
  tourOperators        Json[]
  countryBreakdown     Json[]
  weather              Json?
  hourlyBreakdown      Json[]
  events               Json[]
  lastUpdated DateTime @default(dbgenerated("now() + interval '12 hour'"))
  createdAt            DateTime @default(dbgenerated("now() + interval '12 hour'"))
  updatedAt            DateTime @default(dbgenerated("now() + interval '12 hour'"))

  @@map("visitor_stats")
}
